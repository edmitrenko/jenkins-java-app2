pipeline{
  agent {label 'java'}
  
  stages{
     stage("Build"){
       steps{       
	    // Run Maven on a Unix agent
            sh "./mvnw clean install"
            }
     }
			
     stage("Deploy"){
       steps{
          deploy adapters: [tomcat9(credentialsId: 'jenkins-to-tomcat', path: '', url: 'http://13.51.194.48:8080')], contextPath: null, onFailure: false, war: '**/*.war'
       }

       post { 
          always { 
            cleanWs()
          }
       }
     }
  }  
}    