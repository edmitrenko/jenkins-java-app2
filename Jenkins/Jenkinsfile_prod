pipeline{
  agent {label 'java'}
  
  parameters { 
     string(name: 'tomcat_1', defaultValue: '16.170.205.45', description: 'Tomcat Node-1')
     string(name: 'tomcat_2', defaultValue: '16.171.16.116', description: 'Tomcat Node-2')
    } 


  stages{
     stage("Build"){
       steps{       
	    // Run Maven on a Unix agent
            sh "./mvnw clean install"
            }
     }
			
     stage("Deploy"){
       parallel{
        stage ('Deploy to Tomcat Node-1'){ 
          steps{
             sshagent(['tomcat-server-prod']) {
             sh "scp -o StrictHostKeyChecking=no target/*.war ubuntu@${params.tomcat_1}:/opt/tomcat/webapps"
             }
       
//          post { 
//             always { 
//               cleanWs()
//             }
//          }
          }
        }

        stage ('Deploy to Tomcat Node-2'){ 
          steps{
             sshagent(['tomcat-server-prod']) {
             sh "scp -o StrictHostKeyChecking=no target/*.war ubuntu@${params.tomcat_2}:/opt/tomcat/webapps"
             }
         
//          post { 
//             always { 
//               cleanWs()
//             }
//          }
          }
        } 
       }     
     }  
  }    
} 