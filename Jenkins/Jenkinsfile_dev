pipeline{
  agent {label 'java'}

  parameters { 
     string(name: 'tomcat_dev', defaultValue: '13.39.112.180', description: 'Tomcat dev')
    } 


  
  stages{
     stage("Build"){
       steps{       
	    // Run Maven on a Unix agent
            sh "./mvnw clean install"
            }
     }
			
//     stage("Deploy"){
//       steps{
//          deploy adapters: [tomcat9(credentialsId: 'jenkins-to-tomcat', path: '', url: 'http://13.53.41.132:8080')], contextPath: null, onFailure: false, war: '**/*.war'
//       }
      stage("Deploy"){
       steps{
          sshagent(['tomcat-server-dev']) {
          sh "scp -o StrictHostKeyChecking=no target/*.war ec2-user@${params.tomcat_dev}:/opt/tomcat/webapps/"
          }
       } 
       post { 
          always { 
            cleanWs()
          }
       }
     }     
  }  
}    